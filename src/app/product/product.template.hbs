<div class="col-md-12">
  <div class="row margin-top-20">
    <div class="text-center">
      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#new-product-modal">Add new Product</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="new-product-modal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add new Product</h4>
          </div>
          <form id="new-product-form" method="post" name="myForm">
            <div class="modal-body">
              <div class="form-group">
                <label for="new-product-title">Title:</label>
                <input type="text" class="form-control" id="new-product-title" name="new-product-title">
              </div>

              <div class="form-group">
                <label for="new-product-description">Description:</label>
                <input type="text" class="form-control" id="new-product-description" name="new-product-description">
              </div>

              <div class="form-group">
                <label>Upload Image:</label>
                <input type="file" accept=".jpg,.gif,.png" id="new-product-image" name="new-product-image">
                <img id="new-product-image-preview" src="" data-image-size="">
              </div>

              <div class="form-group">
                <label for="new-product-price">Price:</label>
                <input type="text" class="form-control" id="new-product-price" name="new-product-price">
              </div>

              <!-- <div class="form-group">
                <label for="new-product-quantity">Quantity:</label>
                <input type="text" class="form-control" id="new-product-quantity" name="new-product-quantity">
              </div> -->

            </div>
            <div class="modal-footer">
              <div class="text-center">
                <button type="submit" class="btn btn-default">Submit</button>
              </div>
              <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>

  <div class="row">
    {{#each products}}
      <div class="margin-top-20">

        <div class="col-md-4 col-sm-4 col-xs-6">
          <div class="card card-block text-center">

            <div class="clearfix">
              <div class="pull-right">
                <a href="#" class="edit-product">
                  <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <span class="margin-right-10"></span>
                <a href="#">
                  <span class="remove-product glyphicon glyphicon-remove" data-product-id="{{id}}"></span>
                </a>
              </div>
            </div>

            <h4 class="card-title">{{title}}</h4>
            <p class="card-text">{{description}}</p>
            <img src="{{image}}" alt="Product image {{id}}">
            <p class="card-text">Price: {{price}}$</p>
            <button class="btn btn-primary">Add to basket</button>
          </div>
        </div>

      </div>
    {{/each}}
  </div>

  </div>